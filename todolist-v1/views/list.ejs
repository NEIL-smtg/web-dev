<!-- include the header file -->
<%- include('header') %>

	<div class="box" id="heading">
		<h1><%= listTitle %></h1>
	</div>

	<div class="box">
		<% for (let i = 0; i < newListItem.length; i++) { %>
			<form action="/delete" method="post">
				<div class="item">
					<input type="checkbox" name="checkbox" value="<%= newListItem[i]._id %>" onchange="this.form.submit()">
					<p><%= newListItem[i].name %></p>
				</div>
				<input type="hidden" name="list" value="<%= listTitle %>">
			</form>
		<% } %>

		<form class="item" action="/" method="post">
			<!-- autocomplete off = stop showing suggestion -->
			<input type="text" name="newItem" placeholder="New item" autocomplete="off">
			<button type="submit" name="list" value="<%= listTitle %>">+</button>
		</form>
	</div>

	<!-- include the footer file -->
	<%- include('footer') %>
