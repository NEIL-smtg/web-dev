<%- include('partials/header') %>

<h1><%= pageTitle %></h1>
<p><%= startingContent %></p>

<% posts.forEach(function (p) { %>
	<div class="home-post">
		<h1><%= p.title %></h1>
		<p><%= p.content.substring(0, 100) + " ..." %>
			<a href="/posts/<%= p.title %>">Read More</a>
		</p>
	</div>
<% }); %>

<%- include('partials/footer') %>